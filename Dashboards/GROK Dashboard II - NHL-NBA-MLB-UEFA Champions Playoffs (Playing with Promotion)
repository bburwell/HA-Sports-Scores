              const team2Logo = games[0]["HomeTeam"].Name === team2 ? games[0]["HomeTeam"].Logo : games[0]["AwayTeam"].Logo;

              const gameScores = games.map((game, index) => {
                if (!game || !game["HomeTeam"] || !game["AwayTeam"]) {
                  console.log("Invalid game data at index", index, game);
                  return `<div class="game-score" style="display: flex; flex-direction: column; align-items: center; margin: 0 5px; flex: 0 0 auto;padding: 8px; border-radius: 4px; transition: transform 0.2s;">
