                const team1Score = game["HomeTeam"].Name === team1 ? Number(game["HomeTeam"].Score) : (game["AwayTeam"].Name === team1 ? Number(game["AwayTeam"].Score) : 0);
                const team2Score = game["HomeTeam"].Name === team2 ? Number(game["HomeTeam"].Score) : (game["AwayTeam"].Name === team2 ? Number(game["AwayTeam"].Score) : 0);
                if (game.Status === "full_time") {
                  team1Aggregate += team1Score;
                  team2Aggregate += team2Score;
                }
              });

              const updatedSeriesStatus = x.seriesStatus || (maxGames === 2 ? `Aggregate: ${team1Aggregate}-${team2Aggregate}` : `${team1} vs ${team2}`);
              const seriesSummary = `<div style="background-color: gray; color: white; padding: 2px 5px; border-radius: 4px; font-size: 13px; margin-bottom: 6px;">Series: ${updatedSeriesStatus}</div>`;

              // Get team logos
