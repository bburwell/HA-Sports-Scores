          modify: >-
            x.stats.find(y=>y.abbreviation == 'L').value +
            x.stats.find(y=>y.abbreviation == 'W').value +
            x.stats.find(y=>y.abbreviation == 'T').value
        - name: W
          data: entries
          modify: x.stats.find(y=>y["abbreviation"] == 'W').value
        - name: L
          data: entries
          modify: x.stats.find(y=>y.abbreviation == 'L').value
        - name: T
