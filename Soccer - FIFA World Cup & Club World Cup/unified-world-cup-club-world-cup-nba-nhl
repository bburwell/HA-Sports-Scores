decluttering_templates:
  sports_playoffs_series_gpt:
    card:
      type: custom:flex-table-card
      title: '[[title]]'
      css:
        table+: 'padding: 0px; width: 100%;'
        tbody tr td:first-child: 'width: 100%; text-align: left; padding: 5px;'
        tbody tr:hover: 'background-color: black!important; color:white!important;'
      card_mod:
        style:
          .: |
            ha-card {
              overflow: auto;
              border: 2px solid [[color]];
              border-radius: 8px;
              width: 100% !important;
              box-sizing: border-box;
              background-color: #1a1a1a;
              color: white;
            }
          $: |
            .card-header {
              background-color: [[color]];
              color: white;
              padding: 8px !important;
              font-size: 14px !important;
              font-weight: bold !important;
            }
            @media (max-width: 600px) {
              .card-header {
                font-size: 12px !important;
                padding: 6px !important;
              }
            }
      entities:
        include: '[[entity]]'
      columns:
        - name: ID
          data: '[[events]]'
          modify: x.seriesTitle
          hidden: true
        - name: Match Details
          data: '[[events]]'
          modify: |-
            (() => {
              let series = x;
              if (Array.isArray(x) && x.length > 0) {
                series = x[0]; // Use the first series
              }
              if (!series || !series.seriesDetails || !series.seriesDetails.seriesGames || series.seriesDetails.seriesGames.length === 0) {
                return "No data available";
              }

              const { stage, seriesGames, AdvancingTeams, maxGames, sport } = series.seriesDetails;
              const isSoccer = sport === "Soccer";
              const isGroupStage = stage && stage.toLowerCase().startsWith("group");
              const seriesStatus = series.seriesStatus || (isGroupStage ? `${stage} Standings` : `${stage} Matches`);
              const seriesSummary = `<div style="background-color: gray; color: white; padding: 2px 5px; border-radius: 4px; font-size: 13px; margin-bottom: 6px;">${stage}: ${seriesStatus} ${!isGroupStage && maxGames > 1 ? `(Best of ${maxGames})` : ''}</div>`;

              const teamDisplays = series.seriesDetails.Teams.map(team => {
                const isAdvancing = AdvancingTeams.includes(team);
                const gameWithTeam = seriesGames.find(g => g["Lowest Seed"].Name === team || g["Highest Seed"].Name === team);
                const logo = gameWithTeam ? (gameWithTeam["Lowest Seed"].Name === team ? gameWithTeam["Lowest Seed"].Logo : gameWithTeam["Highest Seed"].Logo) : '';
                const backgroundStyle = isAdvancing ? 'background-color: white; color: black; padding: 2px 5px; border-radius: 4px;' : '';
                return `<div style="${backgroundStyle}"><img src="${logo}" style="height: 16px; vertical-align: middle;" aria-hidden="true"> ${team}</div>`;
              });

              const gameScores = seriesGames.map(game => {
                const team1Name = game["Lowest Seed"].Name;
                const team2Name = game["Highest Seed"].Name;
                const team1Score = game["Lowest Seed"].Score;
                const team2Score = game["Highest Seed"].Score;
                const isCompleted = game.Status === "full_time";
                const isLive = game.Status === "live";

                let team1ScoreDisplay, team2ScoreDisplay;
                if (isCompleted) {
                  team1ScoreDisplay = `<div class="score" style="color: ${Number(team1Score) > Number(team2Score) ? 'green' : 'red'}; text-align: center;">${team1Score}</div>`;
                  team2ScoreDisplay = `<div class="score" style="color: ${Number(team2Score) > Number(team1Score) ? 'green' : 'red'}; text-align: center;">${team2Score}</div>`;
                } else if (isLive) {
                  team1ScoreDisplay = `<div class="score" style="color: white; text-align: center;">${team1Score || '-'}</div>`;
                  team2ScoreDisplay = `<div class="score" style="color: white; text-align: center;">${team2Score || '-'}</div>`;
                } else {
                  team1ScoreDisplay = `<div class="score" style="color: gray; text-align: center;">-</div>`;
                  team2ScoreDisplay = `<div class="score" style="color: gray; text-align: center;">-</div>`;
                }

                const date = new Date(game.Date);
                const gameDate = date.toLocaleDateString("en-US", { weekday: "short", month: "short", day: "numeric" });
                const gameTime = date.toLocaleTimeString("en-US", { hour: "numeric", minute: "2-digit", hour12: true });
                const statusBadge = isCompleted ? '<div class="status-badge" style="background-color: white; color: black; padding: 1px 4px; border-radius: 4px;">FT</div>' : (isLive ? '<div class="status-badge" style="background-color: green; color: white; padding: 1px 4px; border-radius: 4px;">LIVE</div>' : '');

                return `<div class="game-score" style="display: flex; flex-direction: column; align-items: center; margin: 0 5px; flex: 0 0 auto;">
                  <div style="display: flex; flex-direction: column; align-items: center; margin-bottom: 4px;">
                    <span class="game-date">${gameDate}</span>
                    <span class="game-time">${gameTime}</span>
                    <span class="game-broadcast">${game.Broadcast}</span>
                    <span class="game-venue">${game.Venue}</span>
                  </div>
                  ${statusBadge}
                  <div class="game-number" style="display: flex; gap: 5px; align-items: center;">
                    <img src="${game["Lowest Seed"].Logo}" style="height: 16px; vertical-align: middle;" aria-hidden="true"> ${team1Name}
                    <span>vs</span>
                    <img src="${game["Highest Seed"].Logo}" style="height: 16px; vertical-align: middle;" aria-hidden="true"> ${team2Name}
                  </div>
                  ${team1ScoreDisplay}
                  ${team2ScoreDisplay}
                </div>`;
              });

              // Pad with TBD games if needed
              while (gameScores.length < maxGames) {
                gameScores.push(`<div class="game-score" style="display: flex; flex-direction: column; align-items: center; margin: 0 5px; flex: 0 0 auto;">
                  <div style="display: flex; flex-direction: column; align-items: center; margin-bottom: 4px;">
                    <span class="game-date">TBD</span>
                    <span class="game-time">TBD</span>
                    <span class="game-broadcast">TBD</span>
                    <span class="game-venue">TBD</span>
                  </div>
                  <div class="status-badge" style="visibility: hidden;">PLACEHOLDER</div>
                  <div class="game-number">TBD vs TBD</div>
                  <div class="score">-</div>
                  <div class="score">-</div>
                </div>`);
              }

              return `<style>
                @media (max-width: 600px) {
                  .teams-and-scores { flex-direction: column !important; align-items: flex-start !important; }
                  .teams-container { min-width: unset !important; width: 100% !important; padding-top: 10px !important; }
                  .scores-container { flex-direction: row !important; flex-wrap: wrap !important; justify-content: center !important; width: 100% !important; }
                  .game-score { margin: 5px !important; flex: 0 0 30% !important; }
                  .game-date, .game-time, .game-number, .score, .status-badge, .game-broadcast, .game-venue { font-size: 10px !important; }
                }
              </style>
              <div style="display: flex; flex-direction: column; gap: 6px; padding: 8px;">
                ${seriesSummary}
                <div class="teams-and-scores" style="display: flex; flex-direction: row; gap: 20px; align-items: center;">
                  <div class="teams-container" style="display: flex; flex-direction: column; gap: 5px; min-width: 150px; padding-top: 20px;">
                    <div style="font-weight: bold; margin-bottom: 5px; border-bottom: 2px solid white; text-align: center;">Advances</div>
                    ${teamDisplays.join('')}
                  </div>
                  <div class="scores-container" style="display: flex; justify-content: flex-start; gap: 10px;">
                    ${gameScores.join('')}
                  </div>
                </div>
              </div>`;
            })()
